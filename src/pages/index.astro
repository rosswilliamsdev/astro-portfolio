---
import ProjectCard from "../components/ProjectCard.astro"
import ContactForm from "../components/ContactForm"
import projects from "../data/projects.json"
import { technologies } from "../data/technologies.js";
---

<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Ross Williams, Developer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="icon" href="favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/styles.css" />
    <script src="https://smtpjs.com/v3/smtp.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid nav-div">
        <h3><span class="ross fw-bold">Ross </span>Williams</h3>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse text-end justify-content-end"
          id="navbarNavAltMarkup"
        >
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="#home">Home</a>
            <a class="nav-link" href="#about">About</a>
            <a class="nav-link" href="#projects">Projects</a>
            <a class="nav-link" href="#contact">Contact</a>
          </div>
        </div>
      </div>
    </nav>
    <section id="home" class="jumbotron">
      <div class="px-5 pt-2 mb-4 bg-body-tertiary rounded-3">
        <div class="container">
          <div class="drives">
            <p class="drives-header">What Drives Me?</p>
            <p class="excellence"><strong>&emsp;Excellence</strong></p>
            <p class="creativity"><strong>&emsp;&emsp;Creativity</strong></p>
            <p class="challenges">
              <strong>&emsp;&emsp;&emsp;Challenges</strong>
            </p>
            <div class="arrow"></div>
          </div>
        </div>
        <img
          class="ross-jumbo-img"
          src="/images/Ross-cropped-noBG.png"
          alt="Ross hero"
        />
      </div>
    </section>
    <section id="projects" class="mb-0">
      <h1 class="text-center projects">Projects</h1>
      <h6 class="text-center">
        Visit <a href="https://github.com/rosswilliamsdev">Github</a> to see my
        most recent projects
      </h6>
      <div class="album pt-4 pb-2 bg-body-tertiary">
        <div class="container">
          <div
            class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-2 g-5"
          >
					{projects.map(project => 
					<ProjectCard title={project.title} description={project.description} 
					image={project.image} github={project.github} url={project.url} tech={project.tech} />)}
          </div>
        </div>
      </div>
    </section>
    <div class="section-divider">
      <div class="arrow--section"></div>
    </div>
    <section id="about" class="about py-5">
      <h1 class="text-center projects mb-4">About</h1>
      <div class="container">
        <div class="row d-flex">
          <div class="col d-flex ">
            <div class="card about-me about-languages shadow">
              <div class="card-body about-me-card">
                <h5 class="card-title text-center about-me-header mb-0">Bio</h5>
                <div class="m-auto mt-2"><p>
                  With degrees in software engineering and psychology, I have
                  the technical skills needed for projects and the
                  perspective-taking ability to translate stakeholder needs to a
                  functional product.
                </p>
                <p>
                  Because of the 15 years I spent teaching and performing music,
                  I have a deep understanding of the learning process and the
                  growth mindset required for continually adding new skills and
                  technologies. I am also still a passionate teacher who can
                  help new team members integrate quickly.
                </p></div>
                
              </div>
            </div>
          </div>
          
          <div class="col languages-col d-flex">
            <div class="card languages about-languages shadow">
              <div class="card-body languages-card">
                <h5 class="card-title text-center about-me-header">
                  Technologies
                </h5>
                <div class="text-center languages-text m-auto">
                  <p>
                    I am a creative soul, and I love dreaming big. Right now these are some of the tools I use to bring ideas into reality.
                  </p>

                  <div class="tech-grid m-auto">
                    {technologies.map(tech => {
                      const Icon = tech.icon;
                      return (
                        <div>
                          <Icon size={48} color={tech.color} />
                          <p>{tech.name}</p>
                        </div>
                      );
                    })}
                  </div>
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="container py-5" id="contact">
      <h1 class="text-center projects mb-4">Contact Me</h1>
      <ContactForm client:load/>
    </section>

    <footer class="text-center container">
      <p>
        <a
          class="btn"
          href="https://github.com/rosswilliamsdev"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            fill="currentColor"
            class="bi bi-github"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
          <span class="visually-hidden">Button</span>
        </a>
        <a
          class="btn"
          href="https://www.linkedin.com/in/ross-williams-9916a1119/"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="48"
            height="48"
            fill="currentColor"
            class="bi bi-linkedin"
            viewBox="0 0 16 16"
          >
            <path
              d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"
            />
          </svg>
          <span class="visually-hidden">Button</span>
        </a>
      </p>
      <small class="mb-2 small text-muted text-center">
        You made it! Thanks for scrolling all the way down.
      </small>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/app.js" is:inline></script>
  </body>
</html>
