---
const { title, description, image, url, github, tech } = Astro.props;
---
<div class="col">
<div class="card project-card h-100 shadow-sm">
  <a href={url} target="_blank">
    <img class="img-thumbnail" src={image} alt={title} />
  </a>
  <div class="card-body">
    <h5 class="text-center">{title}</h5>
    <p class="card-text my-2">{description}</p>
    <div class="btn-text-bottom d-flex justify-content-between align-items-center my-2">
      <div class="btn-group">
        <a class="btn btn-sm btn-outline-secondary" href={github} target="_blank">
          Code
        </a>
        {url && (<a class="btn btn-sm btn-outline-secondary" href={url} target="_blank">
          View
        </a>)}
      </div>
      {tech && <small class="text-body-secondary mx-3">{tech}</small>}
    </div>
  </div>
</div>
</div>